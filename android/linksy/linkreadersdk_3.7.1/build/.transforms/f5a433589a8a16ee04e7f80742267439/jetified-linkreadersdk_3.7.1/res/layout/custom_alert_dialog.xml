<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/custom_alert_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <!-- hack for full width -->
    <View
        android:id="@+id/width_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <ScrollView
        android:id="@+id/custom_alert_scroll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/custom_alert_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
    </ScrollView>


    <!-- Ok -->
    <!--<androidx.cardview.widget.CardView-->
    <!--android:id="@+id/custom_alert_ok_button"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_margin="16dp"-->
    <!--android:foreground="?android:selectableItemBackground"-->
    <!--app:cardBackgroundColor="@color/livideo_yellow"-->
    <!--app:cardCornerRadius="5dp">-->

    <TextView
        android:id="@+id/custom_alert_ok_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="10dp"
        android:background="@color/hp_light_blue"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
    <!--</androidx.cardview.widget.CardView>-->

</LinearLayout>