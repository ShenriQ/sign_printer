<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:background="@color/black"
    android:paddingLeft="12dp"
    android:layoutDirection="ltr"
    android:orientation="horizontal">

    <com.hp.linkreadersdk.widget.TextView
              android:id="@+id/time_current"
              android:textSize="12sp"
              android:layout_marginRight="10dp"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:typeFace="roboto_regular"
              android:textColor="@color/white" />

    <SeekBar
        android:id="@+id/mediacontroller_progress"
        style="@style/MediaControllerProgressBar"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:thumb="@drawable/scrub_controller"
        android:thumbOffset="8dip"
        android:indeterminate="false"/>

    <com.hp.linkreadersdk.widget.TextView
              android:id="@+id/video_duration"
              android:textSize="12sp"
              android:layout_marginLeft="10dp"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:typeFace="roboto_regular"
              android:textColor="@color/white" />

    <ImageButton
        android:padding="12dp"
        android:id="@+id/enable_fullscreen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/enable_fullscreen_button_description"
        android:src="@drawable/enable_fullscreen"
        android:background="@color/transparent"/>

    <ImageButton
        android:padding="12dp"
        android:id="@+id/disable_fullscreen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/disable_fullscreen_button_description"
        android:src="@drawable/disable_fullscreen"
        android:background="@color/transparent"
        android:paddingRight="12dp"
        android:visibility="gone"/>
</LinearLayout>
