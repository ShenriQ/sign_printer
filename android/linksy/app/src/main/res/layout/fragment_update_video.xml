<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SelectPhotoFragment"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@color/first_color"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_a_video"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="16sp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video will play when Linxy Mark is scanned"
            android:textColor="@color/second_color"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_default_video"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <Button
                    android:layout_width="175dp"
                    android:layout_height="54dp"
                    android:background="@drawable/img_choose_video"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From your phone, tablet or computer (max 200mb)"
                    android:textColor="@color/second_color"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
            <Button
                android:id="@+id/signin_btn"
                android:layout_width="220dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_round_white_bluecorner"
                android:text="Choose From Youtube"
                android:textColor="@color/second_color"
                android:drawableLeft="@drawable/ic_youtube"
                android:textSize="14sp" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
            <Button
                android:layout_width="220dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_round_white_bluecorner"
                android:text="Link to Video"
                android:textColor="@color/second_color"
                android:drawableLeft="@drawable/ic_link"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <Button
                android:id="@+id/update_next_video_btn"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:text="Next   >"
                android:textSize="14sp"
                android:background="@drawable/btn_round_rect"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>