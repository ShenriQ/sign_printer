<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SelectPhotoFragment"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@color/second_color"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_a_photo"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="16sp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo for Linxy Mark"
            android:textColor="@color/second_color"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_default"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <Button
                    android:layout_width="175dp"
                    android:layout_height="54dp"
                    android:background="@drawable/img_choose_img"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jpg or jpeg, max 10mb"
                    android:textColor="@color/second_color"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/signin_btn"
                android:layout_width="220dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_round_white_bluecorner"
                android:drawableLeft="@drawable/ic_linxy_red_24"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Linxy Photo Library"
                android:textColor="@color/second_color"
                android:textSize="14sp" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
            <Button
                android:id="@+id/next_create_btn"
                android:layout_width="220dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_round_white_bluecorner"
                android:text="Link to Photo"
                android:textColor="@color/second_color"
                android:drawableLeft="@drawable/ic_link"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>